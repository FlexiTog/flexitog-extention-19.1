<div class="cct-accordion">
  <a class="cct-accordion-title" data-action="show-accordion">
    <div class="cct-accordion-main">{{custrecord_c25_accordion_title}}</div>
    <div class="cct-accordion-arrows"><i class="cct-accordion-icon ft-chevron-down"></i></div>
  </a>
  <div class="cct-accordion-columns">
    <div class="{{columnClass}} {{#if custrecord_c25_accordion_content1_isempty}}cct-accordion-contentempty{{/if}}">
      {{{custrecord_c25_accordion_content1}}}</div>
    <div class="{{columnClass}} {{#if custrecord_c25_accordion_content2_isempty}}cct-accordion-contentempty{{/if}}">
      {{{custrecord_c25_accordion_content2}}}</div>
    <div class="{{columnClass}} {{#if custrecord_c25_accordion_content3_isempty}}cct-accordion-contentempty{{/if}}">
      {{{custrecord_c25_accordion_content3}}}</div>
  </div>
</div>
